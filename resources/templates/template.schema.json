{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://newgen.studio/schemas/template.schema.json",
  "title": "NewGen Studio Template Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "title", "domain_tags", "complexity", "inputs", "outputs", "runtime", "version", "author", "license"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "domain_tags": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "complexity": {
      "type": "string",
      "enum": ["novice", "light", "power"]
    },
    "inputs": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "minLength": 1 },
          "description": { "type": "string" },
          "options": {
            "type": "array",
            "items": { "type": "string" }
          },
          "default": {}
        }
      }
    },
    "outputs": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "runtime": {
      "type": "object",
      "additionalProperties": false,
      "required": ["estimated_time_minutes"],
      "properties": {
        "estimated_time_minutes": { "type": "number", "minimum": 0 },
        "required_tools": {
          "type": "array",
          "items": { "type": "string" }
        },
        "cost_estimate_usd": { "type": "number", "minimum": 0 }
      }
    },
    "sim_tests": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "samples": { "type": "number", "minimum": 0 },
          "expected_yield_ng": { "type": "number", "minimum": 0 },
          "expected_recovery_mg": { "type": "number", "minimum": 0 },
          "allowed_failure_rate_pct": { "type": "number", "minimum": 0, "maximum": 100 },
          "input": { "type": "string" },
          "expected_runtime_minutes": { "type": "number", "minimum": 0 },
          "expected_failures": { "type": "number", "minimum": 0 }
        }
      }
    },
    "safety_notes": { "type": "string" },
    "compliance_notes": { "type": "string" },
    "schema_definition": { "type": "object" },
    "tests": {
      "type": "array",
      "items": { "type": "string" }
    },
    "version": { "type": "string", "minLength": 1 },
    "author": { "type": "string", "minLength": 1 },
    "license": { "type": "string", "minLength": 1 },
    "provenance": {
      "type": "array",
      "items": { "type": "string" }
    },
    "quality_score": { "type": "number", "minimum": 0, "maximum": 1 },
    "metadata": { "type": "object" }
  }
}
