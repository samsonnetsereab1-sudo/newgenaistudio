{
  "version": 2,
  "installCommand": "npm install --include=dev",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "env": {
    "PORT": "3000",
    "NODE_ENV": "production"
  },
  "envPrefix": "VITE_",
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "https://newgenaistudio-staging.fly.dev/api/:match*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "functions": {
    "api/**": {
      "memory": 512,
      "maxDuration": 30
    }
  }
}
